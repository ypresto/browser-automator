{
  "name": "@browser-automator/extensions-core",
  "version": "0.1.0",
  "description": "Browser extension core with tab/session/permission management",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "dependencies": {
    "@browser-automator/dom-core": "workspace:*"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.280",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^22.0.0",
    "jsdom": "^27.0.1",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
