{
  "name": "@browser-automator/dom-core",
  "version": "0.1.0",
  "description": "Playwright-MCP compatible DOM automation tools using axe-core",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "dependencies": {
    "axe-core": "^4.10.2"
  },
  "devDependencies": {
    "@types/jsdom": "^27.0.0",
    "@types/node": "^22.0.0",
    "jsdom": "^27.0.1",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
